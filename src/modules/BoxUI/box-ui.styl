.box-ui
	position relative
	
	// Reference
	// ==========================================================================
	&__reference
		position absolute
		color #fff
		opacity .5
		top 10px
		right 0
		font-size 18px
	
	// Tabs
	// ==========================================================================
	&__tabs
		display flex
		
		&-button
			display inline-block
			background-color transparent
			cursor pointer
			color #fff
			font-size 16px
			padding 15px 25px
			border none
			border-radius 5px 5px 0 0
			transition background-color .3s ease, color .3s ease
			
			&:hover:not(.is-active),
			&:focus:not(.is-active)
				color yellow
			
			&.is-active
				border-bottom-color transparent
				background-color rgba(255, 255, 255, 0.25)
				cursor default
	
	// Example
	// ==========================================================================
	&__example
		width 100%
		height 100%
		display flex
		align-items center
		justify-content center
		
		pre
			width 100%
	
	// Content
	// ==========================================================================	
	&__content
		height 300px
		background-color rgba(255, 255, 255, 0.95)
		border-radius 0px 0 20px 20px
		overflow scroll
		width 100%
		margin-bottom 15px
		
		&-item
			opacity 0
			position absolute
			left -99999px
			top -99999px
			
			pre
				height 100%
				display flex
				border-radius 0px 0 20px 20px
				
				&.language-html
					align-items center
			
			&.is-active
				opacity 1
				position relative
				left 0
				top 0
				height 100%
				transition opacity .3s ease
				

	// Code
	// ==========================================================================
	&__code
		
		&-textarea
			width 0
			height 0
			opacity 0
		
		&-action
			position absolute
			right 10px
			top 10px
			padding 10px
			display inline-block
			color #888
			border solid 1px #ccc
			cursor pointer
			width 70px
			transition background-color .3s ease
			
			&:hover,
			&:focus
				background-color #f5f5f5
			