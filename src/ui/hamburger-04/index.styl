@import '../../common/hamburger/02'

.ui-hamburger-04
	hamburger-02()
	transition background-position .2s .45s ease

	&:before,
	&:after
		right 0
		
	&.is-active
		background-position 30px 0
		transition-delay 0s
		
		&:before,
		&:after
			width 100%
			transition width .3s .2s ease, transform .3s .4s ease
		
		&:before
			transform rotate(-45deg)
		
		&:after
			transform rotate(45deg)